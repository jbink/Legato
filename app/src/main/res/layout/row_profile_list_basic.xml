<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/row_profile_background"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@color/COLOR_141414"
    android:descendantFocusability="blocksDescendants"
    android:padding="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/COLOR_141414">

        <LinearLayout
            android:id="@+id/row_profile_basic_layout_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:onClick="onClick"
            android:orientation="horizontal"
            android:padding="5dp">


            <ImageButton
                android:id="@+id/row_profile_basic_btn_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/sel_btn_info"
                android:onClick="onClick" />


            <ImageButton
                android:id="@+id/row_profile_basic_btn_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/sel_btn_move_pro"
                android:onClick="onClick" />

        </LinearLayout>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/row_profile_basic_layout_left"
            android:weightSum="3">

            <LinearLayout
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/row_profile_basic_term"
                    style="@style/txt_style_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12.5dp"
                    android:textColor="@color/COLOR_3B3B3B"
                    android:text="@string/short_time"/>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/row_profile_basic_name"
                    style="@style/txt_style_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17.5dp"
                    android:textColor="@color/COLOR_6B6B6B"
                    android:text=""/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_arrow_white"
                    android:layout_marginLeft="20dp"/>


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>