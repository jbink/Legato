<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a0000000"
    android:onClick="onClick"
    android:id="@+id/lan_select_eitire"
    android:gravity="center">

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_radius"
        android:orientation="vertical">

        <!-- 내용 -->

        <RelativeLayout
            android:id="@+id/custom_layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/dlg_save_data_name"
                    style="@style/txt_style_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="5dp"
                    android:hint="@string/save_data_name"
                    android:maxLines="1"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:textColorHint="@color/COLOR_999999"
                    android:textSize="20dp" />

            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/COLOR_6B6B6B"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:minHeight="80dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <RelativeLayout
                android:onClick="onClick"
                android:id="@+id/btn_no_save"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/dlg_btn_left"
                    style="@style/txt_style_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/do_not_save"
                    android:textColor="@color/COLOR_B4B4B4"
                    android:textSize="18dp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/dlg_btn_divide"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/COLOR_6B6B6B"/>

            <RelativeLayout
                android:onClick="onClick"
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/dlg_btn_right"
                    style="@style/txt_style_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </RelativeLayout>

            <!-- 아래 버튼 -->
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>